<Window x:Class="Banking_app.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wombat Bank - Admin"
        Width="1000"
        Height="600"
        Icon="/Wombat_Bank.ico"
        Loaded="AdminWindow_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#FF2B2B2B" Padding="12">
            <TextBlock Margin="8,6,8,14"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Text="Admin Menü"/>

            <Button Margin="0,0,0,10"
                    Height="40"
                    Content="Benutzerverwaltung"
                    Click="Users_Click"/>

            <Separator Margin="0,10"/>

            <Button Height="40"
                    Content="Logout"
                    Click="Logout_Click"/>
        </StackPanel>

        <Frame x:Name="AdminFrame"
               Grid.Column="1"
               Margin="12"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
