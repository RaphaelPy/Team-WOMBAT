<Window x:Class="Banking_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wombat Bank - User"
        Width="900"
        Height="520"
        Icon="/Wombat_Bank.ico"
        Loaded="MainWindow_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="#FF1E1E1E">
            <TextBlock Margin="16,0"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Text="Wombat Bank (User)"/>

            <Button DockPanel.Dock="Right"
                    Margin="0,10,16,10"
                    Padding="14,6"
                    Content="Logout"
                    Click="Logout_Click"/>
        </DockPanel>

        <!-- Frame -->
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
